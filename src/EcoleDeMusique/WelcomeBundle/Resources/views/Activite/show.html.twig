{% extends 'EcoleDeMusiqueWelcomeBundle::layout.html.twig' %}
{% block title %}
        Activites 
{% endblock %}
{% block titlePage %}
        Activites 
{% endblock %}
      {% block content %} 
     <div id="header">
		<div id="nompage">
			<h1>Activités</h1>
		</div>
	</div>
<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Categorie</th>
            <td>{{ entity.categorie }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ entity.nom }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('activite') }}">
            Retour à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('activite_edit', { 'id': entity.id }) }}">
            Editer
        </a>
    </li>
    <li>
        <form action="{{ path('activite_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Supprimer</button>
        </form>
    </li>
</ul>
       {% endblock %}